<resources>
    <style name="ThemeOverlay.App.Button" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="ThemeOverlay.App.Button.TextButton" parent="">
        <item name="colorPrimary">@color/orange</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent.Button</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="strokeColor">@android:color/black</item>
        <item name="android:padding">@dimen/size_spacing_small</item>
        <item name="android:gravity">start</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="Widget.App.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.App.Button.TextButton</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.TextButton</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="paddingStart">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent.Button</item>
        <item name="android:textColor">@color/toggle_text_color</item>
        <item name="backgroundTint">@color/toggle_container_color</item>
        <item name="android:padding">@dimen/size_spacing_medium</item>
        <item name="strokeColor">@color/toggle_stroke_color</item>
    </style>

    <style name="Widget.App.Button.Icon" parent="Widget.App.Button">
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent.Button</item>
        <item name="android:gravity">center</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.App.Button.TextButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent.Button" parent="ShapeAppearance.App.SmallComponent">
        <item name="cornerSize">5dp</item>
    </style>

</resources>