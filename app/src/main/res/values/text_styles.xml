<resources>

    <style name="Body.Light" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">12sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingMultiplier">1</item>
    </style>

    <style name="Body.Light.White" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/montserrat_bold</item>
