    </style>

    <style name="BottomSheetTextWithIcon.Medium.White" parent="BottomSheetTextWithIcon">
        <item name="android:textAppearance">@style/Body.Light</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="singleLine">false</item>
        <item name="maxLines">2</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/size_spacing_small</item>
        <item name="layout_constraintWidth_percent">0.5</item>
        <item name="android:layout_marginTop">@dimen/size_spacing_large</item>
    </style>
</resources>