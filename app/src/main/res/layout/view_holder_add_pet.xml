<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="com.ulusoyapps.pettrackerapp.main.home.HomeViewModel" />
    </data>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_pet"
            style="@style/Widget.App.Button.Icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_spacing_xxlarge"
            android:layout_marginEnd="@dimen/size_spacing_xxlarge"
            android:layout_marginBottom="@dimen/size_spacing_xxlarge"
            android:layout_marginTop="@dimen/size_spacing_medium"
            android:onClick="@{() -> viewmodel.onAddPetClick()}"
            android:text="@string/add_pet"
            app:icon="@drawable/ic_add" />
</layout>
